.startbar.d-print-none
  // start brand
  .brand
    a.logo(href=`/${pathAdmin}/dashboard`)
      span
        img.logo-sm(
          alt="logo-small" 
          src=`/${pathAdmin}/assets/images/logo-sm.png`
          )
      span
        img.logo-lg.logo-light(
          alt="logo-large" 
          src=`/${pathAdmin}/assets/images/logo-light.png`
          )
        img.logo-lg.logo-dark(
          alt="logo-large" 
          src=`/${pathAdmin}/assets/images/logo-dark.png`
          )
  // end brand
  // start startbar-menu
  .startbar-menu
    #startbarCollapse.startbar-collapse(data-simplebar="")
      .d-flex.align-items-start.flex-column.w-100
        // Navigation
        ul.navbar-nav.mb-auto.w-100
          li.menu-label.pt-0.mt-0
            //
              <small class="label-border">
                <div class="border_left hidden-xs"></div>
                <div class="border_right"></div>
                </small>
            span Main Menu
          li.nav-item
            a.nav-link(
              href="/admin/dashboard"
              )
              i.iconoir-home-simple.menu-icon
              span Trang tổng quan
          // end nav-item
          li.nav-item
            a.nav-link(
              aria-controls="sidebarApplications" 
              aria-expanded="false" 
              role="button" 
              data-bs-toggle="collapse" 
              href="#sidebarArticle"
              )
              i.iconoir-journal-page.menu-icon
              span Bài viết
            #sidebarArticle.collapse
              ul.nav.flex-column
                li.nav-item
                  a.nav-link(href=`/${pathAdmin}/article/create`) Tạo bài viết
                // end nav-item
                li.nav-item
                  a.nav-link(href=`/${pathAdmin}/article/list`) Danh sách bài viết
                // end nav-item
                li.nav-item
                  a.nav-link(href=`/${pathAdmin}/article/category`) Danh mục bài viết
                // end nav-item
              // end nav
            // end sidebarArticle
          // end nav-item

.startbar-overlay.d-print-none